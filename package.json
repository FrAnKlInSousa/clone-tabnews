{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Adiquirindo conhecimento",
  "main": "index.js",
  "scripts": {
    "dev": "npm run up && next dev",
    "up": "docker compose -f infra/compose.yaml up -d",
    "down": "docker compose -f infra/compose.yaml down",
    "stop": "docker compose -f infra/compose.yaml stop",
    "recreate": "docker compose -f infra/compose.yaml up -d --force-recreate",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "next": "^16.0.10",
    "pg": "^8.16.3",
    "react": "19.2",
    "react-dom": "19.2"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "prettier": "^3.6.2"
  }
}
